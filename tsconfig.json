{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "commonjs",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true,                                 
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  }
}
